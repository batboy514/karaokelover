<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kactivity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.frankle.karaokelover.KActivityHome"
    tools:showIn="@layout/app_bar_kactivity_home">

    <RelativeLayout
        android:id="@+id/layout_home_no_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_no_connection">

        <ImageView
            android:id="@+id/imgv_no_connection"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_centerInParent="true"
            android:layout_margin="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/drawable_no_connection" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgv_no_connection"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/msg_no_connection"
            android:textColor="@color/text_secondary_light"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.yangbingqiang.android.parallaxviewpager.ParallaxViewPager
            android:id="@+id/cover_container_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/background_dark" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/cover_viewpager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cover_container_viewpager"
            android:background="@android:color/transparent"
            android:padding="8dp"
            app:fillColor="@color/colorAccent"
            app:pageColor="@android:color/transparent"
            app:radius="6dp"
            app:strokeColor="@color/colorAccent"
            app:strokeWidth="1dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleview_hot_artists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cover_container_viewpager"
            android:clipToPadding="true" />

        <ProgressBar
            android:id="@+id/progressbar_hot_artist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>


</RelativeLayout>
